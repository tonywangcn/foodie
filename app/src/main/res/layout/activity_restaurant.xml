<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:fitsSystemWindows="true"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:layout_marginStart="20dp"
                android:layout_marginTop="40dp"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"
                app:layout_collapseParallaxMultiplier="0.7"
                app:expandedTitleMarginEnd="10dp"
                app:expandedTitleMarginStart="10dp"
                android:text="Find the best food" />

            <EditText
                android:id="@+id/search"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:layout_width="370dp"
                android:layout_height="50dp"
                android:drawableLeft="@android:drawable/ic_menu_search"
                android:textColor="@color/grey"
                android:ems="10"
                android:background="@drawable/edit_text_border"
                android:inputType="text"
                android:hint="Search"
                android:textColorHint="@color/black"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"
                app:layout_collapseParallaxMultiplier="0.7" />

            <TextView
                android:id="@+id/textView2"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Categories" />

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/fastfood"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="260dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="1dp"
                    android:src="@drawable/fastfood"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="-60dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Fast Food"/>

            </LinearLayout>

            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/mexican"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="150dp"
                android:layout_marginTop="260dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="1dp"
                    android:src="@drawable/mexican"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="-60dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:text="Mexican Food"/>

            </LinearLayout>
            <LinearLayout
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/asian"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="260dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginStart="1dp"
                    android:src="@drawable/asian"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginStart="-60dp"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Asian Food"/>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layoutAnimation="@anim/layout_animation" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>